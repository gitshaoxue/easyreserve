.container {
  padding: 20rpx;
  background-color: var(--bg-color);
}

.search-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.search-input {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border-radius: 8rpx;
  padding: 0 20rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.search-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  color: var(--text-placeholder);
}

input {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
  color: var(--text-main);
  border: none;
  padding: 0;
}

.filter-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 140rpx;
  height: 80rpx;
  background-color: #ffffff;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: var(--text-main);
}

.filter-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.filter-bar {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.filter-item {
  margin-bottom: 20rpx;
}

.filter-label {
  display: block;
  font-size: 28rpx;
  color: var(--text-main);
  margin-bottom: 10rpx;
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
}

.filter-option {
  padding: 10rpx 20rpx;
  background-color: #F2F3F5;
  border-radius: 6rpx;
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-right: 20rpx;
  margin-bottom: 10rpx;
}

.filter-option.active {
  background-color: #E8F3FF;
  color: #1890FF;
}

.filter-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
}

.filter-actions .button {
  margin-left: 20rpx;
  width: 160rpx;
}

.room-list {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.room-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 2rpx solid var(--border-color);
}

.room-item:last-child {
  border-bottom: none;
}

.room-info {
  flex: 1;
}

.room-name {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-main);
}

.room-capacity,
.room-location {
  display: block;
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-top: 5rpx;
}

.room-equipment {
  display: flex;
  flex-wrap: wrap;
  margin-top: 10rpx;
}

.equipment-tag {
  padding: 5rpx 15rpx;
  background-color: #F2F3F5;
  border-radius: 6rpx;
  font-size: 24rpx;
  color: var(--text-placeholder);
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.room-status {
  align-self: center;
  padding: 8rpx 16rpx;
  border-radius: 15rpx;
  font-size: 24rpx;
  white-space: nowrap;
}

.available {
  background-color: #F6FFED;
  color: var(--success-color);
}

.busy {
  background-color: #FFF2F0;
  color: var(--danger-color);
}

.maintaining {
  background-color: #F5F5F5;
  color: var(--text-placeholder);
}

.no-data {
  padding: 100rpx 0;
  text-align: center;
  color: var(--text-placeholder);
  font-size: 28rpx;
}